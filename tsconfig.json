{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@api/*": [
        "apps/api/src/*"
      ],
      "@cli/*": [
        "apps/cli/src/*"
      ],
      "@libs/common-library": [
        "libs/common-library/src"
      ],
      "@libs/common-library/*": [
        "libs/common-library/src/*"
      ],
      "@libs/database-library": [
        "libs/database-library/src"
      ],
      "@libs/database-library/*": [
        "libs/database-library/src/*"
      ]
    }
  }
}
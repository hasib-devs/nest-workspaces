{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@libs/auth-library": [
        "libs/auth-library/src"
      ],
      "@libs/auth-library/*": [
        "libs/auth-library/src/*"
      ],
      "@libs/common-library": [
        "libs/common-library/src"
      ],
      "@libs/common-library/*": [
        "libs/common-library/src/*"
      ],
      "@libs/config-library": [
        "libs/config-library/src"
      ],
      "@libs/config-library/*": [
        "libs/config-library/src/*"
      ],
      "@libs/database": [
        "libs/database/src"
      ],
      "@libs/database/*": [
        "libs/database/src/*"
      ]
    }
  }
}